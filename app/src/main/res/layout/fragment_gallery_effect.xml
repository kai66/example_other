<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_view"
        android:layout_marginTop="50dp"
        android:clipChildren="false"/>


    <widget.PayPwdEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/pwd_et"
        android:layout_marginTop="20dp">

    </widget.PayPwdEditText>
    
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/black"/>


        <com.haozhang.lib.SlantedTextView
            android:id="@+id/tv_job_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:visibility="visible"
            app:slantedBackgroundColor="#26c4b6"
            app:slantedLength="30dp"
            app:slantedMode="right_bottom"
            app:slantedText="hhh"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="10sp"
            android:layout_gravity="right|bottom"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/lin_serch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/back_white_corner"
            android:visibility="visible"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_search"
                />
            <widget.EditTextWithDelete
                android:id="@+id/edt_search_circle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:background="@null"
                android:hint="search"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="#999"
                android:textColorHint="#999"
                android:layout_marginRight="4dp"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="取消"/>

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_choose"
        android:text="choose time"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>






</LinearLayout>
